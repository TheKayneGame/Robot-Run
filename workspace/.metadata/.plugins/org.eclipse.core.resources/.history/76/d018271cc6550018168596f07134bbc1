#include "kayneLib.h"

int leesInteger() {
	char text[80];
	unsigned char input = atoi(fgets(text, 80, stdin));
	return input;
}

void printfln(const char *input) {
	printf(input);
	printf("\n");
}

void readKey() {
	int b = kbhit();
	//DONT FORGET TO TURN THIS INTO CASE SWITCH WHEN ITS GETTING TO LARGE... NVM NEEDS TO BE CASE SWITCH
	if (b != 0) {
		switch (getch()) {
		case 224:
			key = getch();
			switch (key) {
			case KEY_ESC:
				printfln("esc");
				break;
			case KEY_UP:
				printfln("up");
				break;
			case KEY_LEFT:
				printfln("left");
				break;
			case KEY_DOWN:
				printfln("down");
				break;
			case KEY_RIGHT:
				printfln("right");
				break;
			default:
				printf("%i \n", key);
				break;
			}
			break;

		case 27:
			return;
			break;

		}
	}
}
