#include "kayneLib.h"

void manualControl() {
	printf("inpunt234234234");
	int ch;
	int b, key;
	while (TRUE) {
	if (b != 0) {
		key = getch();
		switch (key) {			// Returns a workable char when a key is pressed
			case ESC:
			return 'p';

			case UP:
			return 'w';

			case LEFT:
			return 'a';

			case DOWN:
			return 's';

			case RIGHT:
			return 'd';
			default:
			printfln("no");
		}
	}

