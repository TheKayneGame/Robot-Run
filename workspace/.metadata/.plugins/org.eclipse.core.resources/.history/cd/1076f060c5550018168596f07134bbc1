#include "kayneLib.h"

void manualControl() {
	printf("inpunt234234234");
	int b, key;
	while (TRUE) {
		b = kbhit();
		//DONT FORGET TO TURN THIS INTO CASE SWITCH WHEN ITS GETTING TO LARGE... NVM NEEDS TO BE CASE SWITCH
		if (b != 0) {
			switch (getch()) {
			case 224:
				key = getch();
				switch (key) {
				case ESC:
					printfln("esc");
					break;
				case UP:
					printfln("up");
					break;
				case LEFT:
					printfln("left");
					break;
				case DOWN:
					printfln("down");
					break;
				case RIGHT:
					printfln("right");
					break;
				default:
					printf("%i \n", key);
					break;
				}
			}break;

			if (getch()== 27 ){
				return;
			}

		}
	}

	/*while (TRUE) {
	 if (getch() == '\033') {
	 getch();
	 switch (getch()) {
	 case 'A':
	 printfln("up");
	 break;
	 case 'B':
	 printfln("up");
	 break;
	 case 'C':
	 printfln("up");
	 break;
	 case 'D':
	 printfln("up");
	 break;
	 }
	 }

	 if (getch() == 'E') {
	 break;
	 }
	 }*/
}
