#include "kayneLib.h"

void manualControl() {
	printf("inpunt234234234");
	int b, key;
	while (TRUE) {
		b = kbhit();
		if (b != 0) {
			key = getch();
			switch (key) {		// Returns a workable char when a key is pressed
			case ESC:
				printfln("esc");
				break;
			case UP:
				printfln("up");
				break;
			case LEFT:
				printfln("left");
				break;
			case DOWN:
				printfln("down");
				break;
			case RIGHT:
				printfln("right");
				break;
			default:
				printf("%i \n", key);
				break;
			}
		}
	}

	/*while (TRUE) {
	 if (getch() == '\033') {
	 getch();
	 switch (getch()) {
	 case 'A':
	 printfln("up");
	 break;
	 case 'B':
	 printfln("up");
	 break;
	 case 'C':
	 printfln("up");
	 break;
	 case 'D':
	 printfln("up");
	 break;
	 }
	 }

	 if (getch() == 'E') {
	 break;
	 }
	 }*/
}
